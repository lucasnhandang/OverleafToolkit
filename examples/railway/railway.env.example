# Mongo URL from Railway (include credentials if provided)
# Note: Overleaf CE 5.0+ uses OVERLEAF_ prefix (not SHARELATEX_)
OVERLEAF_MONGO_URL=mongodb://user:pass@mongo:27017/sharelatex

# Redis connection info from Railway
OVERLEAF_REDIS_HOST=redis
OVERLEAF_REDIS_PORT=6379
OVERLEAF_REDIS_PASSWORD=

# Public URL issued by Railway (update after first deploy)
OVERLEAF_SITE_URL=https://<your-app>.up.railway.app
OVERLEAF_APP_NAME=Overleaf CE
OVERLEAF_ADMIN_EMAIL=you@example.com

# SMTP (recommend Mailgun/SendGrid)
OVERLEAF_EMAIL_FROM_ADDRESS=overleaf@your-domain.com
OVERLEAF_SMTP_HOST=smtp.your-provider.com
OVERLEAF_SMTP_PORT=587
OVERLEAF_SMTP_USER=smtp-user
OVERLEAF_SMTP_PASS=smtp-pass
OVERLEAF_SMTP_SSL=false
OVERLEAF_SMTP_TLS=true

# Optional: limit uploads
OVERLEAF_MAX_UPLOAD_SIZE=50mb

