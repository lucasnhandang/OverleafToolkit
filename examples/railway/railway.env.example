# Mongo URL from Railway (include credentials if provided)
SHARELATEX_MONGO_URL=mongodb://user:pass@mongo:27017/sharelatex

# Redis connection info from Railway
SHARELATEX_REDIS_HOST=redis
SHARELATEX_REDIS_PORT=6379
SHARELATEX_REDIS_PASSWORD=

# Public URL issued by Railway (update after first deploy)
SHARELATEX_SITE_URL=https://<your-app>.up.railway.app
SHARELATEX_APP_NAME=Overleaf CE
SHARELATEX_ADMIN_EMAIL=you@example.com

# SMTP (recommend Mailgun/SendGrid)
SHARELATEX_EMAIL_FROM_ADDRESS=overleaf@your-domain.com
SHARELATEX_SMTP_HOST=smtp.your-provider.com
SHARELATEX_SMTP_PORT=587
SHARELATEX_SMTP_USER=smtp-user
SHARELATEX_SMTP_PASS=smtp-pass
SHARELATEX_SMTP_SSL=false
SHARELATEX_SMTP_TLS=true

# Optional: limit uploads
SHARELATEX_MAX_UPLOAD_SIZE=50mb

